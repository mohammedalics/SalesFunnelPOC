                <principal>
                  <name>sf-employees</name>
                  <class>oracle.security.jps.service.policystore.ApplicationRole</class>
                </principal>
              </principals>
            </grantee>
            <permission-set-refs>
              <permission-set-ref>
                <name>emp</name>
